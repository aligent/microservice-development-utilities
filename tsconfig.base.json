{
  "extends": ["@tsconfig/node20/tsconfig", "@tsconfig/strictest/tsconfig"],
  "compileOnSave": false,
  "compilerOptions": {
      "rootDir": ".",
      "sourceMap": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "es2015",
      "module": "Node16",
      "lib": ["es2023", "dom"],
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "baseUrl": ".",
      "exactOptionalPropertyTypes": false,
      "paths": {
        "@aligent/chunk-by": ["libs/chunk-by/src/index.ts"],
        "@aligent/fetch-ssm-params": ["libs/fetch-ssm-params/src/index.ts"]
      },
      "types": ["node", "vitest", "vitest/globals"]
  },
  "exclude": ["node_modules", "tmp"]
}
