{
  "extends": "@aligent/ts-code-standards/tsconfigs-base",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "exactOptionalPropertyTypes": false,
    "noUncheckedSideEffectImports": true,
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ]
  },
  "exclude": ["node_modules", "tmp"]
}
