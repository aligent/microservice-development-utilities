    "eslint": "^9.14.0",
    "eslint-plugin-import": "^2.31.0",
    "nx": "20.0.12",
    "prettier": "^3.3.3",
    "typedoc": "^0.26.11",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.6.3",
    "verdaccio": "^5.32.2",
    "vite": "^5.0.0",
    "vitest": "^2.0.5"
