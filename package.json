    "object-hash": "^3.0.0"
  },
  "devDependencies": {
    "@aligent/ts-code-standards": "^1.4.1",
    "@nx/eslint": "20.0.12",
    "@nx/eslint-plugin": "20.0.12",
    "@nx/js": "20.0.12",
    "@nx/vite": "20.0.12",
    "@nx/web": "20.0.12",
    "@smithy/util-stream": "^3.2.1",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.9.2",
