{
    "name": "microservice-util-lib",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "services/microservice-util-lib/src",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "color": true,
                "command": "tsc -p tsconfig.lib.json"
            }
        },
        "typedoc": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "color": true,
                "command": "typedoc --readme none --githubPages false --plugin typedoc-plugin-markdown --entryDocument modules.md --namedAnchors true --out docs src/index.ts"
            }
        }
    },
    "tags": ["library", "utilities", "microservice"]
}
