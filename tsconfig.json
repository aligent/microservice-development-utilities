{
  "compilerOptions": {
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
      "./src/**/*.ts",
      "./tests/**/*.ts"
    ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".build/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "types"
  ]
}

