{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "main",
    "generators": {
        "@nx/js:library": {
            "bundler": "tsc",
            "publishable": true,
            "unitTestRunner": "vitest"
        }
    },
    "targetDefaults": {
        "build": {
            "outputs": [
                "{projectRoot}/dist"
            ],
            "cache": true
        },
        "lint": {
            "cache": true
        },
        "@nx/js:tsc": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["default", "^default"]
        },
        "@nx/vite:test": {
            "cache": true,
            "inputs": ["default", "^default"],
            "outputs": ["{projectRoot}/coverage"]
        }
    },
    "plugins": [
        {
            "plugin": "@nx/vite/plugin",
            "options": {
                "testTargetName": "test",
                "typecheckTargetName": "check-types"
            }
        }
    ],
    "release": {
        "version": {
            "preVersionCommand": "npx nx run-many -t build"
        }
    }
}
